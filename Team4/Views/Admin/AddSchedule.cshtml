@model Team4.Models.addSchedule

@{
    ViewBag.Title = "AddSchedule";
}

<h2>AddSchedule</h2>
@using (Html.BeginForm("AddScheduleDB", "Admin"))
{
<table>
    <tr><td>&nbsp;</td></tr>
    <tr>
        <td>
            Route id
        </td>
        <td>@Html.DropDownListFor(a => a.Rid, new SelectList(ViewBag.r), "Select")</td>
        <td>@Html.ValidationMessageFor(a => a.Rid, "", new { @class = "text-danger" })</td>

    </tr>
    <tr><td>&nbsp;</td></tr>
    <tr>
        <td>
            bus id
        </td>
        <td>@Html.DropDownListFor(a => a.Bid, new SelectList(ViewBag.b), "Select")</td>

        <td>@Html.ValidationMessageFor(a => a.Bid, "", new { @class = "text-danger" })</td>

    </tr>
    <tr><td>&nbsp;</td></tr>
    <tr>
        <td>
            Start time
        </td>
        <td>
            @Html.EditorFor(a => a.StartTime)
        </td>
        <td>@Html.ValidationMessageFor(a => a.StartTime, "", new { @class = "text-danger" })</td>

    </tr>
    <tr><td>&nbsp;</td></tr>
    <tr>
        <td>
            Date of journey
        </td>
        <td>
            @Html.EditorFor(a => a.Doj, new { @type = "date" })
        </td>
        <td>@Html.ValidationMessageFor(a => a.Doj, "", new { @class = "text-danger" })</td>

    </tr>
    <tr><td>&nbsp;</td></tr>
    <tr>
        <td>
            Available seats
        </td>
        <td>
            @Html.TextBoxFor(a => a.Capacity)
        </td>
        <td>@Html.ValidationMessageFor(a => a.Capacity, "", new { @class = "text-danger" })</td>

    </tr>
    <tr><td>&nbsp;</td></tr>
    <tr>
        <td>
            <input type="submit" value="submit" />
        </td>
    </tr>
    <tr><td>&nbsp;</td></tr>
</table>
    <h3>
        @if (ViewBag.msg != null)
        {
            @ViewBag.msg
        }
    </h3>
}

